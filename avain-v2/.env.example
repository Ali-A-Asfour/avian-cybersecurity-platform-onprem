# AVIAN Platform - Environment Configuration Template
# Copy this file to .env.local for development

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://avian:avian_dev_password@localhost:5432/avian

# For production, use connection string format:
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# =============================================================================
# Redis Configuration (Sessions & Caching)
# =============================================================================
REDIS_URL=redis://:avian_dev_redis_password@localhost:6379

# For production with TLS:
# REDIS_URL=rediss://:password@host:port

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# Email Configuration (SMTP)
# =============================================================================
# For Gmail SMTP (Development/Testing):
# 1. Enable 2-Step Verification in your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the app password below (not your regular Gmail password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=AVIAN Platform <your-email@gmail.com>

# For production, use a dedicated email service:
# - SendGrid: EMAIL_HOST=smtp.sendgrid.net, EMAIL_PORT=587
# - Mailgun: EMAIL_HOST=smtp.mailgun.org, EMAIL_PORT=587
# - AWS SES: EMAIL_HOST=email-smtp.us-east-1.amazonaws.com, EMAIL_PORT=587

# Base URL for email links (verification, password reset)
BASE_URL=http://localhost:3000

# For development, you can also use test email services:
# - Mailtrap: https://mailtrap.io/ (catches all emails, no real sending)
# - Ethereal: https://ethereal.email/ (temporary test accounts)

# =============================================================================
# Security Configuration
# =============================================================================
# CORS origin for production
CORS_ORIGIN=http://localhost:3000

# Session configuration
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_MAX_AGE=86400000
SESSION_ABSOLUTE_TIMEOUT=604800000

# Password policy
PASSWORD_MIN_LENGTH=12
PASSWORD_EXPIRY_DAYS=90
PASSWORD_HISTORY_COUNT=5

# Account lockout
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_DEBUG_ROUTES=true
BYPASS_AUTH=false

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760

# =============================================================================
# Development Only
# =============================================================================
# Skip database connection during build
SKIP_DB_CONNECTION=false

# Disable authentication for testing (NEVER use in production)
# BYPASS_AUTH=true
