# Production Environment Variables for AWS Amplify
# These should be configured in Amplify Console Environment Variables

# AWS Configuration
AWS_REGION=us-east-1

# Database Configuration (from CDK RDS)
# Get these values from CDK outputs after deployment
DATABASE_HOST=<RDS_ENDPOINT_FROM_CDK>
DATABASE_PORT=5432
DATABASE_NAME=avian
DATABASE_USER=avianadmin
# DATABASE_PASSWORD will be retrieved from Secrets Manager

# AWS Secrets Manager (from CDK)
DATABASE_SECRET_NAME=avian-database-credentials-<ENVIRONMENT>

# AWS Cognito (from CDK outputs)
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=<USER_POOL_ID_FROM_CDK>
NEXT_PUBLIC_COGNITO_CLIENT_ID=<CLIENT_ID_FROM_CDK>

# AWS DynamoDB (from CDK)
DYNAMODB_SESSIONS_TABLE=avian-sessions-<ENVIRONMENT>

# AWS S3 (from CDK)
S3_FIREWALL_CONFIG_BUCKET=avian-firewall-configs-<ENVIRONMENT>-<ACCOUNT_ID>
S3_REPORTS_BUCKET=avian-reports-<ENVIRONMENT>-<ACCOUNT_ID>
AWS_S3_BUCKET=avian-reports-<ENVIRONMENT>-<ACCOUNT_ID>

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://<AMPLIFY_DOMAIN>

# Security
CORS_ORIGIN=https://<AMPLIFY_DOMAIN>

# Features
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_ROUTES=false

# File Storage
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
