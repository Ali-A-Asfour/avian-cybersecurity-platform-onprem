# AVIAN Cybersecurity Platform - Environment Variables Example
# Copy this file to .env.local for development or .env.production for production

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/avian"
REDIS_URL="redis://localhost:6379"

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET="your-super-secure-jwt-secret-here"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-here"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ============================================================================
# SonicWall Firewall Integration
# ============================================================================
# Master encryption key for SonicWall API credentials
# Generate with: openssl rand -hex 32
FIREWALL_ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"

# ============================================================================
# Microsoft Defender & Intune Integration
# ============================================================================
# Microsoft Graph API credentials (Azure App Registration)
MICROSOFT_CLIENT_ID="your-azure-app-client-id"
MICROSOFT_CLIENT_SECRET="your-azure-app-client-secret"
MICROSOFT_TENANT_ID="your-azure-tenant-id"

# ============================================================================
# Email Configuration (OPTIONAL - can skip for now)
# ============================================================================
# Enable email sending (set to 'true' when ready to configure email)
EMAIL_ENABLED="false"

# Email API Configuration (choose one method when ready)
# Method 1: SMTP (Gmail, Office365, etc.)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="AVIAN Security <noreply@your-domain.com>"

# Method 2: Email API Service (SendGrid, Mailgun, AWS SES)
# EMAIL_API_URL="https://api.sendgrid.com/v3/mail/send"
# EMAIL_API_KEY="your-api-key-here"

# Application URL for password reset links
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# SMS Configuration (Twilio) - OPTIONAL but recommended for critical alerts
# ============================================================================
# Enable SMS sending (set to 'true' for production)
SMS_ENABLED="false"

# Twilio credentials (get from https://console.twilio.com)
# Free trial available with $15 credit - can send to verified numbers
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+15551234567"

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Development bypass (set to 'true' for development without full auth)
BYPASS_AUTH="false"

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_METRICS="true"
ENABLE_TRACING="false"
ENABLE_DEBUG_ROUTES="true"

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ============================================================================
# File Upload
# ============================================================================
MAX_FILE_SIZE="10485760"

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN="http://localhost:3000"