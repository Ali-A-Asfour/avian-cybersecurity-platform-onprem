# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/avian_platform_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=avian_platform_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
JWT_SECRET=dev-jwt-secret-change-me
JWT_EXPIRES_IN=24h
NEXTAUTH_SECRET=dev-nextauth-secret-change-me
NEXTAUTH_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Features
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_DEBUG_ROUTES=true

# External Services (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@avian-dev.local

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=dev-csrf-secret

# Firewall Credential Encryption
# Generate a key using: npm run generate-firewall-key
# This is a development key - DO NOT use in production
FIREWALL_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef