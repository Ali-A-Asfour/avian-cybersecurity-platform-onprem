# AVIAN Platform - Alpha Testing Environment
# Internal deployment for client alpha testing
# Secure, production-ready configuration with limited access

# Environment
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://avian-alpha.yourcompany.com

# Database Configuration
# Replace with your actual database server details
DATABASE_URL=postgresql://avian_alpha:CHANGE_THIS_PASSWORD@localhost:5432/avian_alpha
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@localhost:6379

# Security Configuration - GENERATE NEW SECRETS
JWT_SECRET=GENERATE_WITH_openssl_rand_base64_32
JWT_REFRESH_SECRET=GENERATE_WITH_openssl_rand_base64_32
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=GENERATE_WITH_openssl_rand_base64_32
SESSION_MAX_AGE=86400000
SESSION_ABSOLUTE_TIMEOUT=2592000000

# Application URLs - UPDATE WITH YOUR DOMAIN/IP
BASE_URL=https://avian-alpha.yourcompany.com
CORS_ORIGIN=https://avian-alpha.yourcompany.com
NEXTAUTH_URL=https://avian-alpha.yourcompany.com
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_base64_32

# Email Configuration - ALPHA TESTING SETUP
# Option 1: Real email service (recommended for client testing)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=avian-alerts@yourcompany.com
EMAIL_PASSWORD=YOUR_GMAIL_APP_PASSWORD
EMAIL_FROM=AVIAN Security Platform <avian-alerts@yourcompany.com>

# Option 2: Console logging only (for internal testing)
# EMAIL_ENABLED=false

# SMS Configuration - OPTIONAL FOR ALPHA
# Twilio free tier works great for alpha testing
SMS_ENABLED=true
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Security Settings - ALPHA TESTING OPTIMIZED
PASSWORD_MIN_LENGTH=8
PASSWORD_EXPIRY_DAYS=90
PASSWORD_HISTORY_COUNT=5

# Account Lockout - Balanced for testing
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# Rate Limiting - Relaxed for alpha testing
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_LOGIN_WINDOW=900000

# Feature Flags - ALPHA TESTING
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_ROUTES=false
BYPASS_AUTH=false

# File Upload
MAX_FILE_SIZE=10485760

# Alpha Testing Specific
ENVIRONMENT=alpha
CLIENT_NAME=YOUR_CLIENT_NAME
DEPLOYMENT_DATE=2024-01-19